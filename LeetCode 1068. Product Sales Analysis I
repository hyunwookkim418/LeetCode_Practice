#MySQL

#1
select p.product_name, s.year, s.price
from Sales AS s
inner join Product as p
on s.product_id = p.product_id;

#2
select product_name, year, price
from Sales 
left join  Product using (product_id);

#3 
select p.product_name, s.year, s.price
from Sales as s
left join Product as p
on s.product_id = p.product_id
